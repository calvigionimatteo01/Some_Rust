fn main() {

/*
shadowin vs let mut ... = ...;
*/

let x: u64 = 1000;
// ... (altro codice)
let x = x + 1;
// ... (altro codice ancora)
let x = x * 2;
println!("{}", x);

//let mut ... = ...

let mut z: char = '♧';
println!("{}", z);
z = '◇';
/*
Posso ri - assegnare z N volte, in
quanto il Binding è Mutabile.
*/
println!("{}", z);

}
